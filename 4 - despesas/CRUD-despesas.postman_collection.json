						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Response status code is 200\", function () {\r",
									"    pm.expect(pm.response.code).to.equal(200);\r",
									"});\r",
									"\r",
									"\r",
									"pm.test(\"Response time is less than 200ms\", function () {\r",
									"    pm.expect(pm.response.responseTime).to.be.below(200);\r",
									"});\r",
									"\r",
									"\r",
									"pm.test(\"Response is an array with at least one element\", function () {\r",
									"    const responseData = pm.response.json();\r",
									"    \r",
									"    pm.expect(responseData).to.be.an('array').that.is.not.empty;\r",
									"});\r",
									"\r",
									"\r",
									"pm.test(\"Validate the schema of the objects in the array\", function () {\r",
									"    const responseData = pm.response.json();\r",
									"    \r",
									"    pm.expect(responseData).to.be.an('array').that.is.not.empty;\r",
									"\r",
									"    responseData.forEach(function(item) {\r",
									"        pm.expect(item).to.be.an('object');\r",
									"        pm.expect(item).to.have.all.keys('id', 'vencimento', 'descricao', 'montante', 'tipo_despesas');\r",
									"        \r",
									"        pm.expect(item.id).to.be.a('number');\r",
									"        pm.expect(item.vencimento).to.be.a('string');\r",
									"        pm.expect(item.descricao).to.be.a('string');\r",
									"        pm.expect(item.montante).to.be.a('string');\r",
									"        pm.expect(item.tipo_despesas).to.be.a('number');\r",
									"    });\r",
									"});\r",
									"\r",
									"\r",
									"pm.test(\"Descricao must be a non-empty string\", function () {\r",
									"    const responseData = pm.response.json();\r",
									"    \r",
									"    pm.expect(responseData).to.be.an('array').that.is.not.empty;\r",
									"    responseData.forEach(item => {\r",
									"        pm.expect(item.descricao).to.exist.and.to.be.a('string').and.to.have.lengthOf.at.least(1, \"Descricao should not be empty\");\r",
									"    });\r",
									"});\r",
